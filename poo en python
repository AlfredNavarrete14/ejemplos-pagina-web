# Definición de la clase 'Persona'
class <link>Persona</link>:
    def __init__(self, nombre, edad):
        self.nombre = nombre
        self.edad = edad

    def saludar(self):
        print("Hola, mi nombre es", self.nombre, "y tengo", self.edad, "años.")

# Creación de un objeto de la clase 'Persona'
persona1 = <link>Persona</link>("Juan", 25)

# Llamada al método 'saludar' del objeto 'persona1'
persona1.saludar()
